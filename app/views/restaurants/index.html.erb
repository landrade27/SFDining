<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Neighborhood</th>
      <th>Cuisine</th>
      <th>Private dining</th>
      <th>Chefs table</th>
      <th>Min people</th>
      <th>Max people</th>
      <th>Buyout</th>
      <th>Buyout price</th>
      <th>Contact name</th>
      <th>Contact number</th>
      <th>Contact email</th>
      <th>Valet</th>
      <th>Full bar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.neighborhood %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.private_dining %></td>
        <td><%= restaurant.chefs_table %></td>
        <td><%= restaurant.min_people %></td>
        <td><%= restaurant.max_people %></td>
        <td><%= restaurant.buyout %></td>
        <td><%= restaurant.buyout_price %></td>
        <td><%= restaurant.contact_name %></td>
        <td><%= restaurant.contact_number %></td>
        <td><%= restaurant.contact_email %></td>
        <td><%= restaurant.valet %></td>
        <td><%= restaurant.full_bar %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

